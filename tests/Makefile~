NAME	=	testlib

CC	=	clang

SRC		=	test.c

OBJ		=	$(SRC:.c=.o)

LDFLAGS	=	-lft -L./../libft/

CFLAGS	=	-Wall -Wextra -I./../libft/includes/ -g3 

$(NAME): all

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME) -L./../libft/ -lft

lib:
	make re -C ../libft/
	make

clean: 
	rm -rf $(OBJ)

fclean: clean
	rm -rf $(NAME)

re: fclean all
